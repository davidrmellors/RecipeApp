<Window x:Class="RecipeAppGUI.ScaleRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scale Recipe" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Select Scaling Factor:" Margin="10"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10">
            <Button Content="0.5" Margin="0,0,10,0" Click="ScalingFactorButton_Click"/>
            <Button Content="2" Margin="0,0,10,0" Click="ScalingFactorButton_Click"/>
            <Button Content="3" Margin="0,0,10,0" Click="ScalingFactorButton_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="10">
            <Button Content="Cancel" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>